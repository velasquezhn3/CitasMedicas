{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/infrastructure/*"],
      "@ui/*": ["src/ui/*"],
      "@whatsapp/*": ["src/whatsapp/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
